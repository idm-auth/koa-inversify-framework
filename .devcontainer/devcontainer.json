{
  "name": "koa-inversify-framework",
  "service": "workspace",
  "dockerComposeFile": "docker-compose.yml",
  "workspaceFolder": "/workspace",
  "remoteUser": "dev-user",
  "initializeCommand": "sh .devcontainer/scripts/preCreate.sh",
  "postAttachCommand": "sh .devcontainer/scripts/postAttachCommand.sh",
  "postStartCommand": "sh .devcontainer/scripts/postStartCommand.sh",
  "overrideCommand": true,
  "customizations": {
    "vscode": {
      "settings": {
        "amazonQ.enableLocalIndex": true,
        "workbench.colorCustomizations": {
          "activityBar.background": "#1d70ddf1",
          "activityBar.activeBackground": "#1d70ddf1",
          "activityBar.inactiveForeground": "#ffffff",
          "statusBar.background": "#1d70ddf1",
          "statusBar.foreground": "#ffffff"
        },
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": [
          "source.fixAll.eslint"
        ],
        "eslint.enable": true,
        "eslint.validate": [
          "javascript",
          "typescript"
        ],
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.autoImportSuggestions.enabled": true,
        "javascript.autoImportSuggestions.enabled": true,
        "typescript.preferences.expandTypeAliases": true,
        "editor.inlayHints.enabled": "on",
        "editor.hover.enabled": true,
        "editor.hover.delay": 300,
        "editor.hover.sticky": true,
        "vitest.enable": true,
        "vitest.commandLine": "npx vitest",
        "vitest.include": [
          "test/**/*.test.ts"
        ],
        "vitest.exclude": [
          "node_modules/**",
          "dist/**"
        ],
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "typescript.suggest.autoImports": true,
        "remote.autoForwardPorts": false,
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "EditorConfig.EditorConfig",
        "wayou.vscode-todo-highlight",
        "mk12.better-git-line-blame",
        "mongodb.mongodb-vscode",
        "AmazonWebServices.amazon-q-vscode",
        "vitest.explorer"
      ]
    }
  }
}