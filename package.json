{
  "name": "koa-inversify-framework",
  "version": "1.0.2",
  "type": "module",
  "description": "A lightweight framework for building Koa applications with Inversify dependency injection, OpenAPI documentation, and observability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./abstract": {
      "import": "./dist/abstract/index.js",
      "types": "./dist/abstract/index.d.ts"
    },
    "./stereotype": {
      "import": "./dist/stereotype/index.js",
      "types": "./dist/stereotype/index.d.ts"
    },
    "./common": {
      "import": "./dist/common/index.js",
      "types": "./dist/common/index.d.ts"
    },
    "./error": {
      "import": "./dist/error/index.js",
      "types": "./dist/error/index.d.ts"
    },
    "./decorator": {
      "import": "./dist/decorator/index.js",
      "types": "./dist/decorator/index.d.ts"
    },
    "./infrastructure": {
      "import": "./dist/infrastructure/index.js",
      "types": "./dist/infrastructure/index.d.ts"
    },
    "./telemetry": {
      "import": "./dist/telemetry/index.js",
      "types": "./dist/telemetry/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsx watch example.ts",
    "prebuild": "rm -rf dist && npm install --no-save",
    "build": "npm run build:js && npm run build:types",
    "build:js": "node build.mjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "ncu": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idm-auth/koa-inversify-framework.git"
  },
  "keywords": [
    "koa",
    "inversify",
    "framework",
    "dependency-injection",
    "openapi",
    "swagger",
    "typescript",
    "observability",
    "opentelemetry"
  ],
  "author": "IDM Auth",
  "license": "Proprietary",
  "bugs": {
    "url": "https://github.com/idm-auth/koa-inversify-framework/issues"
  },
  "homepage": "https://github.com/idm-auth/koa-inversify-framework#readme",
  "devDependencies": {
    "@tsconfig/node24": "^24.0.4",
    "@types/axios": "^0.14.4",
    "@types/koa": "^3.0.1",
    "@types/koa__cors": "^5.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-dist": "^3.30.6",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.4.1",
    "npm-check-updates": "^19.3.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@idm-auth/auth-client": "^0.1.16",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^15.3.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-prometheus": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/instrumentation-mongoose": "^0.57.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "axios": "^1.13.5",
    "dotenv": "^17.2.4",
    "inversify": "^7.11.0",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "koa-helmet": "9.0.0",
    "koa-mount": "^4.2.0",
    "koa-static": "^5.0.0",
    "mongoose": "^9.2.0",
    "pino": "^10.3.1",
    "pino-caller": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-dist": "^5.31.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  }
}
